{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "dependencies": {
    "content-type": "^1.0.4"
  },
  "description": "sonarwhal rule that checks for media types (f.k.a. MIME types) related best practices",
  "devDependencies": {
    "ava": "^0.25.0",
    "cpx": "^1.5.0",
    "eslint": "^4.18.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-typescript": "^0.9.0",
    "markdownlint-cli": "^0.7.0",
    "npm-link-check": "^2.0.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "sonarwhal": "^0.28.1",
    "typescript": "^2.6.2",
    "typescript-eslint-parser": "^14.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist/src",
    "npm-shrinkwrap.json"
  ],
  "homepage": "https://sonarwhal.com/",
  "keywords": [
    "sonarwhal",
    "sonarwhal-rule",
    "content-type",
    "content-type-rule",
    "sonarwhal-recommended"
  ],
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "name": "@sonarwhal/rule-content-type",
  "nyc": {
    "extends": "../../../../.nycrc"
  },
  "peerDependencies": {
    "sonarwhal": "^0.28.1"
  },
  "repository": "sonarwhal/sonarwhal",
  "scripts": {
    "build": "yarn clean && npm-run-all build:*",
    "build-release": "yarn clean && yarn build:assets && tsc --inlineSourceMap false --removeComments true",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --ignore-path ../../.eslintignore --report-unused-disable-directives",
    "lint:md": "markdownlint --ignore CHANGELOG.md *.md",
    "test": "yarn lint && yarn build && nyc ava",
    "watch": "yarn build && npm-run-all --parallel -c watch:*",
    "watch:assets": "yarn build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "yarn build:ts -- --watch"
  },
  "version": "2.0.0"
}
